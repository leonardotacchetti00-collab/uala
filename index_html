    function filterWines(category) {
        // Aggiorna lo stato dei bottoni
        const buttons = document.querySelectorAll('.tab-btn');
        buttons.forEach(btn => btn.classList.remove('active'));
        event.currentTarget.classList.add('active');

        const container = document.getElementById('wine-list-container');
        container.innerHTML = ''; // Pulisce la lista

        // Filtra i vini in base alla categoria selezionata
        // BOLLICINE include: BOLLICINE (tutti i tipi) + CHAMPAGNE
        let filteredWines;
        if (category === 'BOLLICINE') {
            filteredWines = wineDB.filter(w => w.c === 'BOLLICINE' || w.c === 'CHAMPAGNE');
        } else {
            filteredWines = wineDB.filter(w => w.c === category);
        }

        // Raggruppa per Regione
        const winesByRegion = filteredWines.reduce((acc, wine) => {
            // Se è una bollicina, raggruppiamo prima per Tipo (es. Champagne, Metodo Classico) poi Regione? 
            // Per semplicità e pulizia, raggruppiamo per Regione/Paese come richiesto
            const region = wine.r;
            if (!acc[region]) {
                acc[region] = [];
            }
            acc[region].push(wine);
            return acc;
        }, {});

        // Ordina le regioni alfabeticamente
        const sortedRegions = Object.keys(winesByRegion).sort();

        // Genera HTML
        sortedRegions.forEach(region => {
            const wines = winesByRegion[region];
            let html = `<div class="region-block"><h3 class="region-title">${region}</h3>`;
            
            wines.forEach(wine => {
                // Per le bollicine mostriamo anche il tipo (es. Metodo Classico)
                let extraTag = "";
                if (wine.t) { extraTag = `<span class="wine-type-tag">${wine.t}</span>`; }

                html += `
                <div class="wine-card">
                    <div class="wine-info">
                        <div class="wine-name">${wine.n} ${extraTag}</div>
                        <div class="wine-producer">${wine.p}</div>
                        <div class="wine-details">${wine.v} | ${wine.d}</div>
                    </div>
                </div>`;
            });
            
            html += `</div>`;
            container.innerHTML += html;
        });
    }

    // Carica i BOLLICINE all'avvio
    window.onload = function() {
        // Simula click sul primo bottone
        document.querySelector('.tab-btn.active').click();
    };
</script>

</body>
</html>
